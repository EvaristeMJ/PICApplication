<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.GameScreenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </ImageView>

        <TextView
            android:id="@+id/firstInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="GameInfo"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/secondInfo"
            android:layout_width="300dp"
            android:layout_height="@dimen/_50ssp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/white"
            android:text="GameInfo"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/thirdInfo"
            android:layout_width="300dp"
            android:layout_height="@dimen/_50ssp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/secondInfo"
            android:background="@color/white"
            android:gravity="end"
            android:text="GameInfo"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/fourthInfo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/thirdInfo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/speakButton"
            android:background="@color/white"
            android:gravity="bottom"
            android:text="GameInfo"
            android:textColor="@color/black"
            android:textSize="24sp">

        </TextView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/speakButton"
            android:layout_width="@dimen/_50ssp"
            android:layout_height="@dimen/_50ssp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Speak"
            ></com.google.android.material.button.MaterialButton>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
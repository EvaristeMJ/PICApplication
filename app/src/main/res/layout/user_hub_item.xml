<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userHubItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/usernameHub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60ssp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/_60ssp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>
    <ImageView
        android:id="@+id/userImageHub"
        android:layout_width="@dimen/_60ssp"
        android:layout_height="@dimen/_60ssp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toEndOf="@id/usernameHub"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>